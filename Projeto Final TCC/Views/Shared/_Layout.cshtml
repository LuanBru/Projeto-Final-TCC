<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<div class="navbar navbar-inverse navbar-fixed-top" style="background-color: black; color: #ffffff;">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action("Index", "Home")"><span class="glyphicon glyphicon-home"></span> Página Inicial</a></li>
                <li><a href="@Url.Action("Contact", "Home")"><span class="glyphicon glyphicon-user"></span>Cadastro</a></li>
                <li><a href="#" data-toggle="modal" data-target="#suporteModal"><span class="glyphicon glyphicon-headphones"></span> Suporte</a></li>
            </ul>
        </div>
    </div>
</div>

<!-- Modal de Suporte -->
<div class="modal fade" id="suporteModal" tabindex="-1" role="dialog" aria-labelledby="suporteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="suporteModalLabel">Suporte ao Usuário</h4>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            @using (Html.BeginForm("EnviarSuporte", "Suporte"))
                            {
                                <div class="form-group">
                                    <label for="opcao"><i class="fa fa-question-circle"></i> Selecione uma opção:</label>
                                    <select id="opcao" name="opcao" class="form-control">
                                        <option value="duvida">Tirar dúvida</option>
                                        <option value="sugestao">Sugestão</option>
                                        <option value="reclamacao">Reclamação</option>
                                        <option value="outro">Outro</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="nome"><i class="fa fa-user"></i> Nome:</label>
                                    <input type="text" id="nome" name="nome" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label for="email"><i class="fa fa-envelope"></i> E-mail:</label>
                                    <input type="email" id="email" name="email" class="form-control" />
                                </div>

                                <div class="form-group">
                                    <label for="telefone"><i class="fa fa-phone"></i> Telefone:</label>
                                    <input type="tel" id="telefone" name="telefone" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label for="mensagem"><i class="fa fa-comment"></i> Mensagem:</label>
                                    <textarea id="mensagem" name="mensagem" rows="5" class="form-control"></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary">Enviar</button>

                                <div class="modal fade" id="suporteModal" tabindex="-1" role="dialog" aria-labelledby="suporteModalLabel">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="suporteModalLabel">Suporte ao Usuário</h4>
                                            </div>
                                            <div class="modal-body">
                                                <div class="container">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            @using (Html.BeginForm("EnviarSuporte", "Suporte"))
                                                            {
                                                                <div class="form-group">
                                                                    <label for="opcao"><i class="fa fa-question-circle"></i> Selecione uma opção:</label>
                                                                    <select id="opcao" name="opcao" class="form-control">
                                                                        <option value="duvida">Tirar dúvida</option>
                                                                        <option value="sugestao">Sugestão</option>
                                                                        <option value="reclamacao">Reclamação</option>
                                                                        <option value="outro">Outro</option>
                                                                    </select>
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="nome"><i class="fa fa-user"></i> Nome:</label>
                                                                    <input type="text" id="nome" name="nome" class="form-control" />
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="email"><i class="fa fa-envelope"></i> E-mail:</label>
                                                                    <input type="email" id="email" name="email" class="form-control" />
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="telefone"><i class="fa fa-phone"></i> Telefone:</label>
                                                                    <input type="tel" id="telefone" name="telefone" class="form-control" />
                                                                </div>

                                                                <div class="form-group">
                                                                    <label for="mensagem"><i class="fa fa-comment"></i> Mensagem:</label>
                                                                    <textarea id="mensagem" name="mensagem" rows="5" class="form-control"></textarea>
                                                                </div>

                                                                <button type="submit" class="btn btn-primary">Enviar</button>
                                                            }
                                                        </div>

                                                        <div class="col-md-6">
                                                            <img src="~/Content/Images/informacoes.png" alt="Imagem de suporte ao usuário" class="img-responsive" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    body {
        background-color: antiquewhite);
        background-size: cover;
    }
</style>
<div class="container">
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</div>




</html>