@model Projeto_Final_TCC.Models.Usuario

@{
    ViewBag.Title = "Contact";
}
<br>
<br>
<body>
    <div class="jumbotron jumbotron-fluid" style="background-color: rgba(85, 169, 76, 1.0)">
        <div class="container-fluid">
            <div class="col-md-6 col-md-offset-3 text-center">
                <img src="~/Content/Images/tatu.png" alt="Logo" class="img-responsive center-block">
                <br>
                <br>
                <div class="btn-group" role="group" aria-label="Opções">
                    <button type="button" class="btn btn-primary btn-outline-dark btn-lg" data-toggle="modal" data-target="#loginModal">Login</button>
                    <button type="button" class="btn btn-dark btn btn-outline-dark btn-lg" data-toggle="modal" data-target="#cadastroModal">Cadastro</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="cadastroModal" tabindex="-1" role="dialog" aria-labelledby="cadastroModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cadastroModalLabel">Cadastro</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Cadastro", "Cadastrar", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <Entry Placeholder="Novo Email" x:Name="Email"></Entry>
                        <Entry Placeholder="Nova senha" x:Name="Senha"></Entry>


                        <Button BackgroundColor="Black" TextColor="LightGreen" Text="CADASTRO" Clicked="cadastrobtn_Clicked" x:Name="cadastrobtn" CornerRadius="10" />
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalLabel">Login</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="Username">E-Mail:</label>
                            <input type="text" class="form-control" id="Email" name="Email" required>
                        </div>

                        <div class="form-group">
                            <label for="Password">Senha:</label>
                            <input type="password" class="form-control" id="Senha" name="Senha" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Login</button>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>
</body>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section scripts {
    <script>
        $(function () {
            $('#IdBiologo').change(function () {
                if (this.checked) {
                    $('#divIdBiologo').show();
                    $('#IdBiologoValor').attr('required', true);
                } else {
                    $('#divIdBiologo').hide();
                    $('#IdBiologoValor').attr('required', false);
                }
            });
        });
    </script>
}