                    <li><a href="@Url.Action("About", "Home")"><span class="glyphicon glyphicon-user"></span> Cadastro</a></li>
                    <li><a href="@Url.Action("About",  "Home")"><span class="glyphicon glyphicon-headphones"></span> Suporte</a></li>
                </ul>
            </div>
        </div>
    </div>
    <br>
    <br>
    <br>
    <div id="mapDiv" style="width: 1200px; height: 600px"></div>
    <script>

        // latitude e longitude
        var lat = -23.55;
        var lon = -46.63;
        // inicializa o mapa
        map = L.map('mapDiv').setView([lat, lon], 13);

        // define os recursos para exibição
        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: 'Map data &copy; <a href="https://www.macoratti.net/">Macoratti.net</a>',
            maxZoom: 18,
        }).addTo(map);

        // adiciona um marcador no mapa
        marker = L.marker([lat, lon]).addTo(map);

        // adiciona um popup no marcador
        marker.bindPopup("<b>Centro</b><br />Pça da Sé<br />São Paulo").openPopup();

    </script>
    <br>
    <br>
    <br>
    <br>
    <div class="jumbotron" style="background-color: whitesmoke;">
